/* modern_style.qss */
/* Modern style for GPS Strava Art Maker */
QMainWindow {
    background-color: #f5f5f5;
}

QPushButton {
    font-size: 16px;
    padding: 10px 12px;
    background-color: #007ACC;
    color: white;
    border: none;
    border-radius: 6px;
}

QPushButton:hover {
    background-color: #005F99;
}

QLabel {
    font-size: 10px;
    color: #333333;
}

QFileDialog {
    font-size: 14px;
}
